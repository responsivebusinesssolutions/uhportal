{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2018", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "paths": {
      "@env/*": ["environments/*"],
      "@assets/*": ["assets/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"]
  }
}
